---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Stream your favorite movies" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-primary text-white">
		<nav class="fixed top-0 w-full bg-primary/95 z-50 border-b border-gray-800">
			<div class="container mx-auto px-4 py-4 flex items-center justify-between">
				<div class="text-2xl font-bold text-accent">StreamFlix</div>
				<div class="flex items-center space-x-6">
					<a href="/" class="hover:text-accent transition-colors">Home</a>
					<a href="/movies" class="hover:text-accent transition-colors">Movies</a>
					<a href="/anime" class="hover:text-accent transition-colors">Anime</a>
					<a href="/downloads" class="hover:text-accent transition-colors">Downloads</a>
					<a href="/dashboard" class="hover:text-accent transition-colors">Dashboard</a>
					<button class="bg-accent px-4 py-2 rounded-md hover:bg-accent/90 transition-colors">Sign In</button>
				</div>
			</div>
		</nav>
		<slot />
	</body>
</html>